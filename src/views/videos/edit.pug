extends ../base

block content
    form(method="POST")
        input(placeholder="Title", required, type="text", name="title", maxLength=80, value=video.title)
        input(placeholder="Description", required, type="text", name="description", maxLength=500, value=video.description)
        input(placeholder="Hashtags", required, type="text", name="hashtags", value=video.hashtags.join())
        input(value="Save" type="submit")
extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        h4 Title
        input(required, type="text", name="title", minLength=3, maxLength=80)
        h4 Description
        input(required, type="text", name="description", minLength=5, maxLength=500)
        h4 Hashtags ( separated by comma. )
        input(required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")
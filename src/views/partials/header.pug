header
    a(href="/").header__logo
        i.fab.fa-youtube
    h1=pageTitle
    nav 
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn 
                li
                    a(href="/videos/upload") Upload Video
                li 
                    a(href="/users/edit") Edit Profile
                li 
                    a(href=`/users/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            img(src="/uploads/avatars/defaultImage").header__avatar
                        else 
                            img(src=loggedInUser.avatarUrl.startsWith("https://") ? loggedInUser.avatarUrl : `/${loggedInUser.avatarUrl}`).header__avatar
                li 
                    a(href="/users/logout") Log Out
            else
                li
                    a(href="/join") Join
                li
                    a(href="/login").header__btn Login
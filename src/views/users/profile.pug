extends ../base
include ../mixins/video

block content 
    div.profile__data
        if user.avatarUrl 
            img(src=user.avatarUrl.startsWith("https://") ? user.avatarUrl : `/${user.avatarUrl}`).avatar
        else 
            img(src="/uploads/avatars/defaultImage")
        h3=user.name
    div.video-grid
        each video in user.videos 
            +video(video)
        else 
            span.empty__mssage No videos found